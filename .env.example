# CrossBridge Environment Variables Configuration
# Copy this file to .env and update with your values

# Database Configuration (for profiling and persistence)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=crossbridge_db
DB_USER=postgres
DB_PASSWORD=admin

# Grafana Configuration (for visualization)
GRAFANA_HOST=localhost
GRAFANA_PORT=3000

# Test Database (for development/testing)
TEST_DB_HOST=localhost
TEST_DB_PORT=5432
TEST_DB_NAME=crossbridge_test_db
TEST_DB_USER=postgres
TEST_DB_PASSWORD=admin

# AI Provider Configuration
OPENAI_API_KEY=your_openai_key_here
ANTHROPIC_API_KEY=your_anthropic_key_here

# Application Configuration
APP_VERSION=v0.1.1
LOG_LEVEL=INFO

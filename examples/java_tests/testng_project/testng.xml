<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="CrossBridge Test Suite" parallel="tests" thread-count="2">
    
    <test name="Smoke Tests" preserve-order="true">
        <groups>
            <run>
                <include name="smoke"/>
            </run>
        </groups>
        <classes>
            <class name="com.crossbridge.tests.ApiTest"/>
            <class name="com.crossbridge.tests.DataDrivenTest"/>
        </classes>
    </test>
    
    <test name="Regression Tests">
        <groups>
            <run>
                <include name="regression"/>
            </run>
        </groups>
        <classes>
            <class name="com.crossbridge.tests.ApiTest"/>
            <class name="com.crossbridge.tests.DataDrivenTest"/>
        </classes>
    </test>
    
</suite>

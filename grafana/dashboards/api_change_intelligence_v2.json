{
  "dashboard": {
    "title": "API Change Intelligence Dashboard",
    "tags": ["crossbridge", "api-changes", "intelligence", "confluence", "alerts"],
    "timezone": "browser",
    "schemaVersion": 39,
    "version": 1,
    "refresh": "30s",
    "time": {
      "from": "now-24h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
        "type": "stat",
        "title": "Total API Changes (24h)",
        "targets": [
          {
            "refId": "A",
            "rawSql": "SELECT COUNT(*) as value FROM api_changes WHERE detected_at > NOW() - INTERVAL '24 hours'",
            "format": "table"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value",
          "orientation": "auto",
          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 10, "color": "yellow"},
                {"value": 50, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0},
        "type": "stat",
        "title": "Breaking Changes (24h)",
        "targets": [
          {
            "refId": "A",
            "rawSql": "SELECT COUNT(*) as value FROM api_changes WHERE breaking = true AND detected_at > NOW() - INTERVAL '24 hours'",
            "format": "table"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value",
          "orientation": "auto",
          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 1, "color": "orange"},
                {"value": 5, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0},
        "type": "stat",
        "title": "Critical Risk Changes (24h)",
        "targets": [
          {
            "refId": "A",
            "rawSql": "SELECT COUNT(*) as value FROM api_changes WHERE risk_level = 'CRITICAL' AND detected_at > NOW() - INTERVAL '24 hours'",
            "format": "table"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value",
          "orientation": "auto",
          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 1, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0},
        "type": "stat",
        "title": "Alerts Sent (24h)",
        "targets": [
          {
            "refId": "A",
            "rawSql": "SELECT COUNT(*) as value FROM alert_history WHERE sent_at > NOW() - INTERVAL '24 hours'",
            "format": "table"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value",
          "orientation": "auto",
          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {"mode": "fixed", "fixedColor": "blue"}
          }
        }
      },
      {
        "id": 5,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
        "type": "timeseries",
        "title": "API Changes Over Time",
        "targets": [
          {
            "refId": "A",
            "rawSql": "SELECT DATE_TRUNC('hour', detected_at) as time, COUNT(*) as value FROM api_changes WHERE $__timeFilter(detected_at) GROUP BY time ORDER BY time",
            "format": "time_series"
          }
        ],
        "options": {
          "legend": {"displayMode": "list", "placement": "bottom"},
          "tooltip": {"mode": "multi"}
        },
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "custom": {
              "fillOpacity": 10,
              "lineWidth": 2
            }
          }
        }
      },
      {
        "id": 6,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
        "type": "timeseries",
        "title": "Breaking vs Non-Breaking Changes",
        "targets": [
          {
            "refId": "A",
            "rawSql": "SELECT DATE_TRUNC('hour', detected_at) as time, SUM(CASE WHEN breaking THEN 1 ELSE 0 END) as breaking, SUM(CASE WHEN NOT breaking THEN 1 ELSE 0 END) as non_breaking FROM api_changes WHERE $__timeFilter(detected_at) GROUP BY time ORDER BY time",
            "format": "time_series"
          }
        ],
        "options": {
          "legend": {"displayMode": "list", "placement": "bottom"},
          "tooltip": {"mode": "multi"}
        },
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "custom": {
              "fillOpacity": 10,
              "lineWidth": 2
            }
          }
        }
      },
      {
        "id": 7,
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 12},
        "type": "piechart",
        "title": "Risk Level Distribution (24h)",
        "targets": [
          {
            "refId": "A",
            "rawSql": "SELECT risk_level, COUNT(*) as count FROM api_changes WHERE detected_at > NOW() - INTERVAL '24 hours' GROUP BY risk_level ORDER BY count DESC",
            "format": "table"
          }
        ],
        "options": {
          "legend": {"displayMode": "table", "placement": "right", "values": ["value", "percent"]},
          "pieType": "donut"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        }
      },
      {
        "id": 8,
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 12},
        "type": "piechart",
        "title": "Change Types Distribution (24h)",
        "targets": [
          {
            "refId": "A",
            "rawSql": "SELECT change_type, COUNT(*) as count FROM api_changes WHERE detected_at > NOW() - INTERVAL '24 hours' GROUP BY change_type ORDER BY count DESC",
            "format": "table"
          }
        ],
        "options": {
          "legend": {"displayMode": "table", "placement": "right", "values": ["value", "percent"]},
          "pieType": "pie"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        }
      },
      {
        "id": 9,
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 12},
        "type": "piechart",
        "title": "Entity Types Distribution (24h)",
        "targets": [
          {
            "refId": "A",
            "rawSql": "SELECT entity_type, COUNT(*) as count FROM api_changes WHERE detected_at > NOW() - INTERVAL '24 hours' GROUP BY entity_type ORDER BY count DESC",
            "format": "table"
          }
        ],
        "options": {
          "legend": {"displayMode": "table", "placement": "right", "values": ["value", "percent"]},
          "pieType": "pie"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        }
      },
      {
        "id": 10,
        "gridPos": {"h": 10, "w": 24, "x": 0, "y": 20},
        "type": "table",
        "title": "Recent API Changes (Last 50)",
        "targets": [
          {
            "refId": "A",
            "rawSql": "SELECT detected_at as \"Time\", entity_name as \"Entity\", change_type as \"Change Type\", entity_type as \"Entity Type\", path as \"Path\", http_method as \"Method\", CASE WHEN breaking THEN 'YES' ELSE 'NO' END as \"Breaking\", risk_level as \"Risk\" FROM api_changes ORDER BY detected_at DESC LIMIT 50",
            "format": "table"
          }
        ],
        "options": {
          "showHeader": true
        },
        "fieldConfig": {
          "defaults": {
            "custom": {"align": "left"}
          }
        }
      },
      {
        "id": 11,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 30},
        "type": "bargauge",
        "title": "Top 10 APIs with Most Changes",
        "targets": [
          {
            "refId": "A",
            "rawSql": "SELECT COALESCE(entity_name, 'Unknown') as entity, COUNT(*) as count FROM api_changes WHERE detected_at > NOW() - INTERVAL '7 days' GROUP BY entity_name ORDER BY count DESC LIMIT 10",
            "format": "table"
          }
        ],
        "options": {
          "orientation": "horizontal",
          "displayMode": "gradient",
          "showUnfilled": true
        },
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "continuous-GrYlRd"},
            "unit": "short"
          }
        }
      },
      {
        "id": 12,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 30},
        "type": "bargauge",
        "title": "Changes by HTTP Method",
        "targets": [
          {
            "refId": "A",
            "rawSql": "SELECT COALESCE(http_method, 'N/A') as method, COUNT(*) as count FROM api_changes WHERE detected_at > NOW() - INTERVAL '7 days' GROUP BY http_method ORDER BY count DESC",
            "format": "table"
          }
        ],
        "options": {
          "orientation": "horizontal",
          "displayMode": "gradient",
          "showUnfilled": true
        },
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "short"
          }
        }
      },
      {
        "id": 13,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 38},
        "type": "table",
        "title": "Recent Alerts Sent",
        "targets": [
          {
            "refId": "A",
            "rawSql": "SELECT sent_at as \"Sent At\", title as \"Title\", severity as \"Severity\", notifiers_sent as \"Notifiers\", source as \"Source\" FROM alert_history ORDER BY sent_at DESC LIMIT 20",
            "format": "table"
          }
        ],
        "options": {
          "showHeader": true
        },
        "fieldConfig": {
          "defaults": {
            "custom": {"align": "left"}
          }
        }
      },
      {
        "id": 14,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 38},
        "type": "timeseries",
        "title": "Alerts by Severity Over Time",
        "targets": [
          {
            "refId": "A",
            "rawSql": "SELECT DATE_TRUNC('hour', sent_at) as time, severity, COUNT(*) as count FROM alert_history WHERE $__timeFilter(sent_at) GROUP BY time, severity ORDER BY time",
            "format": "time_series"
          }
        ],
        "options": {
          "legend": {"displayMode": "list", "placement": "bottom"},
          "tooltip": {"mode": "multi"}
        },
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "custom": {
              "fillOpacity": 10,
              "lineWidth": 2
            }
          }
        }
      }
    ]
  }
}

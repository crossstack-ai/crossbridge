{
  "dashboard": {
    "id": null,
    "uid": "api-change-intel-v2",
    "title": "API Change Intelligence Dashboard",
    "description": "Monitor API changes, breaking changes, risk levels, alerts, and Confluence notifications",
    "tags": ["crossbridge", "api-changes", "intelligence", "confluence", "alerts"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 2,
    "refresh": "30s",
    "time": {
      "from": "now-24h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["10s", "30s", "1m", "5m", "15m", "30m", "1h"]
    },
    "annotations": {
      "list": [
        {
          "datasource": {
            "type": "postgres",
            "uid": "${DS_CROSSBRIDGE}"
          },
          "enable": true,
          "iconColor": "red",
          "name": "Critical Changes",
          "rawQuery": "SELECT detected_at as time, entity_name as text, 'CRITICAL: ' || change_type || ' on ' || entity_type as title FROM api_changes WHERE risk_level = 'CRITICAL' AND $__timeFilter(detected_at)"
        }
      ]
    },
    "panels": [
      {
        "id": 1,
        "gridPos": {"h": 3, "w": 6, "x": 0, "y": 0},
        "type": "stat",
        "title": "Total API Changes (24h)",
        "targets": [
          {
            "refId": "A",
            "rawSql": "SELECT COUNT(*) as value FROM api_changes WHERE detected_at > NOW() - INTERVAL '24 hours'",
            "format": "table",
            "datasource": {"type": "postgres", "uid": "${DS_CROSSBRIDGE}"}
          }
        ],
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          },
          "orientation": "auto",
          "textMode": "auto",
          "colorMode": "value",
          "graphMode": "area"
        },
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 10},
                {"color": "red", "value": 50}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "gridPos": {"h": 3, "w": 6, "x": 6, "y": 0},
        "type": "stat",
        "title": "Breaking Changes (24h)",
        "targets": [
          {
            "refId": "A",
            "rawSql": "SELECT COUNT(*) as value FROM api_changes WHERE breaking = true AND detected_at > NOW() - INTERVAL '24 hours'",
            "format": "table",
            "datasource": {"type": "postgres", "uid": "${DS_CROSSBRIDGE}"}
          }
        ],
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          },
          "orientation": "auto",
          "textMode": "auto",
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "orange", "value": 1},
                {"color": "red", "value": 5}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "gridPos": {"h": 3, "w": 6, "x": 12, "y": 0},
        "type": "stat",
        "title": "Critical Risk Changes (24h)",
        "targets": [
          {
            "refId": "A",
            "rawSql": "SELECT COUNT(*) as value FROM api_changes WHERE risk_level = 'CRITICAL' AND detected_at > NOW() - INTERVAL '24 hours'",
            "format": "table",
            "datasource": {"type": "postgres", "uid": "${DS_CROSSBRIDGE}"}
          }
        ],
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          },
          "orientation": "auto",
          "textMode": "auto",
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "red", "value": 1}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "gridPos": {"h": 3, "w": 6, "x": 18, "y": 0},
        "type": "stat",
        "title": "Alerts Sent (24h)",
        "targets": [
          {
            "refId": "A",
            "rawSql": "SELECT COUNT(*) as value FROM alert_history WHERE sent_at > NOW() - INTERVAL '24 hours'",
            "format": "table",
            "datasource": {"type": "postgres", "uid": "${DS_CROSSBRIDGE}"}
          }
        ],
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          },
          "orientation": "auto",
          "textMode": "auto",
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "blue", "value": null}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "gridPos": {"h": 9, "w": 12, "x": 0, "y": 3},
        "type": "timeseries",
        "title": "API Changes Over Time",
        "targets": [
          {
            "refId": "A",
            "rawSql": "SELECT DATE_TRUNC('hour', detected_at) as time, COUNT(*) as \"Total Changes\" FROM api_changes WHERE $__timeFilter(detected_at) GROUP BY time ORDER BY time",
            "format": "time_series",
            "datasource": {"type": "postgres", "uid": "${DS_CROSSBRIDGE}"}
          },
          {
            "refId": "B",
            "rawSql": "SELECT DATE_TRUNC('hour', detected_at) as time, COUNT(*) as \"Breaking Changes\" FROM api_changes WHERE breaking = true AND $__timeFilter(detected_at) GROUP BY time ORDER BY time",
            "format": "time_series",
            "datasource": {"type": "postgres", "uid": "${DS_CROSSBRIDGE}"}
          }
        ],
        "options": {
          "legend": {
            "displayMode": "list",
            "placement": "bottom",
            "showLegend": true
          },
          "tooltip": {"mode": "multi", "sort": "none"}
        },
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "custom": {
              "fillOpacity": 10,
              "lineWidth": 2,
              "pointSize": 5
            },
            "unit": "short"
          },
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "Breaking Changes"},
              "properties": [
                {"id": "color", "value": {"fixedColor": "red", "mode": "fixed"}}
              ]
            }
          ]
        }
      },
      {
        "id": 6,
        "gridPos": {"h": 9, "w": 12, "x": 12, "y": 3},
        "type": "timeseries",
        "title": "Changes by Risk Level",
        "targets": [
          {
            "refId": "A",
            "rawSql": "SELECT DATE_TRUNC('hour', detected_at) as time, risk_level, COUNT(*) as count FROM api_changes WHERE $__timeFilter(detected_at) GROUP BY time, risk_level ORDER BY time",
            "format": "time_series",
            "datasource": {"type": "postgres", "uid": "${DS_CROSSBRIDGE}"}
          }
        ],
        "options": {
          "legend": {
            "displayMode": "list",
            "placement": "bottom",
            "showLegend": true
          },
          "tooltip": {"mode": "multi", "sort": "none"}
        },
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "custom": {
              "fillOpacity": 10,
              "lineWidth": 2,
              "stacking": {"mode": "normal"}
            },
            "unit": "short"
          },
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "CRITICAL"},
              "properties": [
                {"id": "color", "value": {"fixedColor": "dark-red", "mode": "fixed"}}
              ]
            },
            {
              "matcher": {"id": "byName", "options": "HIGH"},
              "properties": [
                {"id": "color", "value": {"fixedColor": "red", "mode": "fixed"}}
              ]
            },
            {
              "matcher": {"id": "byName", "options": "MEDIUM"},
              "properties": [
                {"id": "color", "value": {"fixedColor": "orange", "mode": "fixed"}}
              ]
            },
            {
              "matcher": {"id": "byName", "options": "LOW"},
              "properties": [
                {"id": "color", "value": {"fixedColor": "green", "mode": "fixed"}}
              ]
            }
          ]
        }
      },
      {
        "id": 7,
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 12},
        "type": "piechart",
        "title": "Risk Level Distribution (24h)",
        "targets": [
          {
            "refId": "A",
            "rawSql": "SELECT risk_level as metric, COUNT(*) as value FROM api_changes WHERE detected_at > NOW() - INTERVAL '24 hours' GROUP BY risk_level ORDER BY COUNT(*) DESC",
            "format": "table",
            "datasource": {"type": "postgres", "uid": "${DS_CROSSBRIDGE}"}
          }
        ],
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "right",
            "showLegend": true,
            "values": ["value", "percent"]
          },
          "pieType": "donut",
          "tooltip": {"mode": "single"}
        },
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"}
          },
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "CRITICAL"},
              "properties": [
                {"id": "color", "value": {"fixedColor": "dark-red", "mode": "fixed"}}
              ]
            },
            {
              "matcher": {"id": "byName", "options": "HIGH"},
              "properties": [
                {"id": "color", "value": {"fixedColor": "red", "mode": "fixed"}}
              ]
            },
            {
              "matcher": {"id": "byName", "options": "MEDIUM"},
              "properties": [
                {"id": "color", "value": {"fixedColor": "orange", "mode": "fixed"}}
              ]
            },
            {
              "matcher": {"id": "byName", "options": "LOW"},
              "properties": [
                {"id": "color", "value": {"fixedColor": "green", "mode": "fixed"}}
              ]
            }
          ]
        }
      },
      {
        "id": 8,
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 12},
        "type": "piechart",
        "title": "Change Types Distribution (24h)",
        "targets": [
          {
            "refId": "A",
            "rawSql": "SELECT change_type as metric, COUNT(*) as value FROM api_changes WHERE detected_at > NOW() - INTERVAL '24 hours' GROUP BY change_type ORDER BY COUNT(*) DESC",
            "format": "table",
            "datasource": {"type": "postgres", "uid": "${DS_CROSSBRIDGE}"}
          }
        ],
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "right",
            "showLegend": true,
            "values": ["value", "percent"]
          },
          "pieType": "pie",
          "tooltip": {"mode": "single"}
        }
      },
      {
        "id": 9,
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 12},
        "type": "piechart",
        "title": "Entity Types Distribution (24h)",
        "targets": [
          {
            "refId": "A",
            "rawSql": "SELECT entity_type as metric, COUNT(*) as value FROM api_changes WHERE detected_at > NOW() - INTERVAL '24 hours' GROUP BY entity_type ORDER BY COUNT(*) DESC",
            "format": "table",
            "datasource": {"type": "postgres", "uid": "${DS_CROSSBRIDGE}"}
          }
        ],
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "right",
            "showLegend": true,
            "values": ["value", "percent"]
          },
          "pieType": "pie",
          "tooltip": {"mode": "single"}
        }
      },
      {
        "id": 10,
        "gridPos": {"h": 10, "w": 24, "x": 0, "y": 20},
        "type": "table",
        "title": "Recent API Changes (Last 50)",
        "targets": [
          {
            "refId": "A",
            "rawSql": "SELECT detected_at as \"Time\", entity_name as \"Entity\", change_type as \"Change Type\", entity_type as \"Entity Type\", path as \"Path\", http_method as \"Method\", CASE WHEN breaking THEN 'ðŸ”´ YES' ELSE 'ðŸŸ¢ NO' END as \"Breaking\", risk_level as \"Risk Level\" FROM api_changes ORDER BY detected_at DESC LIMIT 50",
            "format": "table",
            "datasource": {"type": "postgres", "uid": "${DS_CROSSBRIDGE}"}
          }
        ],
        "options": {
          "showHeader": true,
          "sortBy": [
            {
              "displayName": "Time",
              "desc": true
            }
          ]
        },
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "left",
              "filterable": true
            }
          },
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "Risk Level"},
              "properties": [
                {
                  "id": "custom.cellOptions",
                  "value": {
                    "type": "color-text"
                  }
                },
                {
                  "id": "mappings",
                  "value": [
                    {"type": "value", "value": "CRITICAL", "text": "ðŸ”´ CRITICAL"},
                    {"type": "value", "value": "HIGH", "text": "ðŸŸ  HIGH"},
                    {"type": "value", "value": "MEDIUM", "text": "ðŸŸ¡ MEDIUM"},
                    {"type": "value", "value": "LOW", "text": "ðŸŸ¢ LOW"}
                  ]
                }
              ]
            }
          ]
        }
      },
      {
        "id": 11,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 30},
        "type": "bargauge",
        "title": "Top 10 APIs with Most Changes",
        "targets": [
          {
            "refId": "A",
            "rawSql": "SELECT COALESCE(entity_name, 'Unknown') as metric, COUNT(*) as value FROM api_changes WHERE detected_at > NOW() - INTERVAL '7 days' GROUP BY entity_name ORDER BY COUNT(*) DESC LIMIT 10",
            "format": "table",
            "datasource": {"type": "postgres", "uid": "${DS_CROSSBRIDGE}"}
          }
        ],
        "options": {
          "orientation": "horizontal",
          "displayMode": "gradient",
          "showUnfilled": true
        },
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "continuous-GrYlRd"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 5},
                {"color": "red", "value": 10}
              ]
            }
          }
        }
      },
      {
        "id": 12,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 30},
        "type": "bargauge",
        "title": "Changes by HTTP Method",
        "targets": [
          {
            "refId": "A",
            "rawSql": "SELECT COALESCE(http_method, 'N/A') as metric, COUNT(*) as value FROM api_changes WHERE detected_at > NOW() - INTERVAL '7 days' GROUP BY http_method ORDER BY COUNT(*) DESC",
            "format": "table",
            "datasource": {"type": "postgres", "uid": "${DS_CROSSBRIDGE}"}
          }
        ],
        "options": {
          "orientation": "horizontal",
          "displayMode": "gradient",
          "showUnfilled": true
        },
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"}
          }
        }
      },
      {
        "id": 13,
        "gridPos": {"h": 10, "w": 12, "x": 0, "y": 38},
        "type": "table",
        "title": "Recent Alerts Sent",
        "targets": [
          {
            "refId": "A",
            "rawSql": "SELECT sent_at as \"Sent At\", title as \"Title\", severity as \"Severity\", notifiers_sent as \"Notifiers\", source as \"Source\" FROM alert_history ORDER BY sent_at DESC LIMIT 20",
            "format": "table",
            "datasource": {"type": "postgres", "uid": "${DS_CROSSBRIDGE}"}
          }
        ],
        "options": {
          "showHeader": true,
          "sortBy": [
            {
              "displayName": "Sent At",
              "desc": true
            }
          ]
        },
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "left",
              "filterable": true
            }
          },
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "Severity"},
              "properties": [
                {
                  "id": "custom.cellOptions",
                  "value": {
                    "type": "color-background"
                  }
                },
                {
                  "id": "mappings",
                  "value": [
                    {"type": "value", "value": "critical", "text": "CRITICAL", "color": "dark-red"},
                    {"type": "value", "value": "high", "text": "HIGH", "color": "red"},
                    {"type": "value", "value": "medium", "text": "MEDIUM", "color": "orange"},
                    {"type": "value", "value": "low", "text": "LOW", "color": "green"},
                    {"type": "value", "value": "info", "text": "INFO", "color": "blue"}
                  ]
                }
              ]
            }
          ]
        }
      },
      {
        "id": 14,
        "gridPos": {"h": 10, "w": 12, "x": 12, "y": 38},
        "type": "timeseries",
        "title": "Alerts by Severity Over Time",
        "targets": [
          {
            "refId": "A",
            "rawSql": "SELECT DATE_TRUNC('hour', sent_at) as time, severity, COUNT(*) as count FROM alert_history WHERE $__timeFilter(sent_at) GROUP BY time, severity ORDER BY time",
            "format": "time_series",
            "datasource": {"type": "postgres", "uid": "${DS_CROSSBRIDGE}"}
          }
        ],
        "options": {
          "legend": {
            "displayMode": "list",
            "placement": "bottom",
            "showLegend": true
          },
          "tooltip": {"mode": "multi", "sort": "none"}
        },
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "custom": {
              "fillOpacity": 10,
              "lineWidth": 2
            }
          },
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "critical"},
              "properties": [
                {"id": "color", "value": {"fixedColor": "dark-red", "mode": "fixed"}}
              ]
            },
            {
              "matcher": {"id": "byName", "options": "high"},
              "properties": [
                {"id": "color", "value": {"fixedColor": "red", "mode": "fixed"}}
              ]
            }
          ]
        }
      },
      {
        "id": 15,
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 48},
        "type": "timeseries",
        "title": "Grafana Metrics Aggregation (From grafana_api_metrics table)",
        "targets": [
          {
            "refId": "A",
            "rawSql": "SELECT DATE_TRUNC('hour', metric_time) as time, SUM(total_count) as \"Total Changes\", SUM(breaking_count) as \"Breaking Changes\" FROM grafana_api_metrics WHERE $__timeFilter(metric_time) GROUP BY time ORDER BY time",
            "format": "time_series",
            "datasource": {"type": "postgres", "uid": "${DS_CROSSBRIDGE}"}
          }
        ],
        "options": {
          "legend": {
            "displayMode": "list",
            "placement": "bottom",
            "showLegend": true
          },
          "tooltip": {"mode": "multi", "sort": "none"}
        },
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "custom": {
              "fillOpacity": 10,
              "lineWidth": 2
            },
            "unit": "short"
          }
        }
      }
    ]
  },
  "overwrite": true,
  "message": "API Change Intelligence Dashboard v2 - Production Ready"
}

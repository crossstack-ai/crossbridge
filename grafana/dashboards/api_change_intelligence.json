{
  "dashboard": {
    "id": null,
    "uid": "api-change-intel",
    "title": "API Change Intelligence",
    "description": "CrossBridge API Change Intelligence Dashboard - Track API changes, risks, and test impacts",
    "tags": ["crossbridge", "api", "changes", "intelligence"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 0,
    "refresh": "5m",
    "panels": [
      {
        "id": 1,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "type": "timeseries",
        "title": "API Changes Over Time",
        "targets": [
          {
            "refId": "A",
            "format": "time_series",
            "rawSql": "SELECT detected_at AS time, COUNT(*) AS changes FROM api_changes WHERE $__timeFilter(detected_at) GROUP BY detected_at ORDER BY detected_at",
            "datasource": {"type": "postgres", "uid": "${DS_CROSSBRIDGE}"}
          }
        ],
        "options": {
          "legend": {"displayMode": "list", "placement": "bottom"},
          "tooltip": {"mode": "single"}
        },
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "custom": {"fillOpacity": 10}
          }
        }
      },
      {
        "id": 2,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "type": "timeseries",
        "title": "Breaking vs Non-Breaking Changes",
        "targets": [
          {
            "refId": "A",
            "format": "time_series",
            "rawSql": "SELECT detected_at AS time, SUM(CASE WHEN breaking THEN 1 ELSE 0 END) AS breaking, SUM(CASE WHEN NOT breaking THEN 1 ELSE 0 END) AS non_breaking FROM api_changes WHERE $__timeFilter(detected_at) GROUP BY detected_at ORDER BY detected_at",
            "datasource": {"type": "postgres", "uid": "${DS_CROSSBRIDGE}"}
          }
        ],
        "options": {
          "legend": {"displayMode": "list", "placement": "bottom"}
        },
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"}
          }
        }
      },
      {
        "id": 3,
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 8},
        "type": "piechart",
        "title": "Risk Level Distribution",
        "targets": [
          {
            "refId": "A",
            "format": "table",
            "rawSql": "SELECT risk_level AS metric, COUNT(*) AS value FROM api_changes WHERE $__timeFilter(detected_at) GROUP BY risk_level",
            "datasource": {"type": "postgres", "uid": "${DS_CROSSBRIDGE}"}
          }
        ],
        "options": {
          "legend": {"displayMode": "list", "placement": "right"}
        }
      },
      {
        "id": 4,
        "gridPos": {"h": 8, "w": 18, "x": 6, "y": 8},
        "type": "table",
        "title": "High-Risk APIs Heatmap",
        "targets": [
          {
            "refId": "A",
            "format": "table",
            "rawSql": "SELECT api_name AS \"API Name\", COUNT(*) AS \"High Risk Changes\" FROM api_changes WHERE risk_level IN ('high', 'critical') AND $__timeFilter(detected_at) GROUP BY api_name ORDER BY COUNT(*) DESC LIMIT 10",
            "datasource": {"type": "postgres", "uid": "${DS_CROSSBRIDGE}"}
          }
        ]
      },
      {
        "id": 5,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "type": "timeseries",
        "title": "AI Usage vs Manual Detection",
        "targets": [
          {
            "refId": "A",
            "format": "time_series",
            "rawSql": "SELECT detected_at AS time, COUNT(*) FILTER (WHERE ai_enhanced = true) AS ai, COUNT(*) FILTER (WHERE ai_enhanced = false) AS rules FROM api_changes WHERE $__timeFilter(detected_at) GROUP BY detected_at ORDER BY detected_at",
            "datasource": {"type": "postgres", "uid": "${DS_CROSSBRIDGE}"}
          }
        ]
      },
      {
        "id": 6,
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 16},
        "type": "stat",
        "title": "AI Token Usage (This Month)",
        "targets": [
          {
            "refId": "A",
            "format": "table",
            "rawSql": "SELECT SUM(ai_tokens_used) AS \"Total Tokens\" FROM api_diff_runs WHERE $__timeFilter(started_at) AND DATE_TRUNC('month', started_at) = DATE_TRUNC('month', NOW())",
            "datasource": {"type": "postgres", "uid": "${DS_CROSSBRIDGE}"}
          }
        ],
        "options": {
          "graphMode": "none",
          "colorMode": "value"
        }
      },
      {
        "id": 7,
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 16},
        "type": "barchart",
        "title": "Change Type Breakdown",
        "targets": [
          {
            "refId": "A",
            "format": "table",
            "rawSql": "SELECT change_type AS metric, COUNT(*) AS value FROM api_changes WHERE $__timeFilter(detected_at) GROUP BY change_type",
            "datasource": {"type": "postgres", "uid": "${DS_CROSSBRIDGE}"}
          }
        ]
      },
      {
        "id": 8,
        "gridPos": {"h": 10, "w": 24, "x": 0, "y": 24},
        "type": "table",
        "title": "Recent Breaking Changes",
        "targets": [
          {
            "refId": "A",
            "format": "table",
            "rawSql": "SELECT detected_at AS \"Time\", api_name AS \"API\", entity_name AS \"Entity\", risk_level AS \"Risk\", recommended_tests[1] AS \"Primary Action\" FROM api_changes WHERE breaking = true AND $__timeFilter(detected_at) ORDER BY detected_at DESC LIMIT 20",
            "datasource": {"type": "postgres", "uid": "${DS_CROSSBRIDGE}"}
          }
        ]
      }
    ],
    "time": {
      "from": "now-30d",
      "to": "now"
    },
    "timepicker": {}
  }
}

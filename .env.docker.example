# ============================================================================
# Environment Variables for CrossBridge Docker
# ============================================================================
# Copy this file to .env and customize for your environment
# Used by docker-compose.yml
# ============================================================================

# ============================================================================
# CROSSBRIDGE VERSION
# ============================================================================
CROSSBRIDGE_VERSION=1.0.0

# ============================================================================
# CROSSBRIDGE CONFIGURATION
# ============================================================================

# CrossBridge master switch
CROSSBRIDGE_ENABLED=true

# Hooks system (for sidecar/observer mode integration)
CROSSBRIDGE_HOOKS_ENABLED=true

# Observer mode (passive monitoring)
CROSSBRIDGE_MODE=observer

# ============================================================================
# EXECUTION CONFIGURATION
# ============================================================================

# Framework to execute (testng, junit, restassured, robot, pytest, behave, cypress, playwright, cucumber, specflow, nunit)
FRAMEWORK=pytest

# Execution strategy (smoke, impacted, risk, full)
STRATEGY=smoke

# Environment name
CROSSBRIDGE_ENV=local

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# ============================================================================
# APPLICATION TRACKING
# ============================================================================

# Product/Application name
PRODUCT_NAME=CrossBridgeApp

# Application version
APP_VERSION=v0.2.0

# Application version (alternative naming)
CROSSBRIDGE_APPLICATION_VERSION=v0.2.0

# Environment
ENVIRONMENT=local

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# Database host
DB_HOST=postgres

# Database port
DB_PORT=5432

# Database name
DB_NAME=crossbridge

# Database user
DB_USER=postgres

# Database password
DB_PASSWORD=admin

# ============================================================================
# GRAFANA CONFIGURATION
# ============================================================================

# Grafana admin password
GRAFANA_PASSWORD=admin

# ============================================================================
# GIT CONFIGURATION (for impacted strategy)
# ============================================================================

# Base branch for comparison
GIT_BASE_BRANCH=main

# Current branch
GIT_BRANCH=feature/test

# Commit SHA
GIT_COMMIT_SHA=

# Build ID (for CI/CD)
BUILD_ID=

# ============================================================================
# EXECUTION CONSTRAINTS
# ============================================================================

# Maximum number of tests to run
MAX_TESTS=

# Maximum duration in minutes
MAX_DURATION=

# Parallel execution
PARALLEL=true

# Include flaky tests
INCLUDE_FLAKY=false

# ============================================================================
# CI/CD INTEGRATION
# ============================================================================

# CI mode (affects logging, retries, etc.)
CI_MODE=false

# Dry run (plan only, no execution)
DRY_RUN=false

# ============================================================================
# EXAMPLE VALUES (uncomment to use)
# ============================================================================

# For TestNG with impacted strategy:
# FRAMEWORK=testng
# STRATEGY=impacted
# GIT_BASE_BRANCH=origin/main
# MAX_TESTS=50

# For Pytest with smoke tests:
# FRAMEWORK=pytest
# STRATEGY=smoke
# ENVIRONMENT=dev

# For Robot with risk-based:
# FRAMEWORK=robot
# STRATEGY=risk
# MAX_DURATION=30
# PARALLEL=true

# For Cypress E2E:
# FRAMEWORK=cypress
# STRATEGY=smoke
# ENVIRONMENT=staging
